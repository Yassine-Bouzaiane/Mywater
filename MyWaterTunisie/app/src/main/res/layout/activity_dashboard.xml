<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Activities.DashboardActivity"
    android:background="@drawable/d">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linear1"
        android:layout_marginBottom="20dp">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/produitsBtn"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:textColor="@color/whiteColor"
                android:text="Produits"
                android:background="#008AC3"/>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/panierBtn"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:textColor="@color/whiteColor"
                android:layout_centerInParent="true"
                android:text="Panier"
                android:background="#008AC3"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linear2"
        android:layout_below="@+id/linear1"

        android:layout_marginBottom="20dp">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/devisBtn"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:textColor="@color/whiteColor"
                android:layout_centerInParent="true"
                android:text="CrÃ©ez \n un devis"
                android:background="#2189A7"/>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/profileBtn"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:textColor="@color/whiteColor"
                android:layout_centerInParent="true"
                android:text="Profile"
                android:background="#2189A7"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/contactBtn"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:textColor="@color/whiteColor"
                android:text="Contactez \n nous"
                android:background="#296073"/>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:text="Logout"
                android:textColor="@color/whiteColor"
                android:background="#296073"
                />
        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>